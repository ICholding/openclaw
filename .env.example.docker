# OpenClaw/Moltbot Docker Environment Configuration
# Copy this file to .env and fill in your values

# ============================================
# GATEWAY CONFIGURATION
# ============================================

# Gateway authentication token (generate with: openssl rand -hex 32)
OPENCLAW_GATEWAY_TOKEN=

# Gateway bind address (loopback, lan, or 0.0.0.0)
OPENCLAW_GATEWAY_BIND=lan

# Gateway ports
OPENCLAW_GATEWAY_PORT=18789
OPENCLAW_BRIDGE_PORT=18790
OPENCLAW_CANVAS_PORT=18793

# ============================================
# AI PROVIDER API KEYS
# ============================================

# OpenAI
OPENAI_API_KEY=

# Anthropic Claude
ANTHROPIC_API_KEY=

# Google AI
GOOGLE_AI_API_KEY=

# AWS Bedrock (optional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1

# ============================================
# CLAUDE DESKTOP INTEGRATION (Optional)
# ============================================

CLAUDE_AI_SESSION_KEY=
CLAUDE_WEB_SESSION_KEY=
CLAUDE_WEB_COOKIE=

# ============================================
# CHANNEL CONFIGURATION
# ============================================

# WhatsApp (enabled by default)
WHATSAPP_ENABLED=true

# Telegram Bot
TELEGRAM_ENABLED=false
TELEGRAM_BOT_TOKEN=

# Discord Bot
DISCORD_ENABLED=false
DISCORD_BOT_TOKEN=
DISCORD_CLIENT_ID=

# Slack Bot
SLACK_ENABLED=false
SLACK_BOT_TOKEN=
SLACK_SIGNING_SECRET=

# Signal
SIGNAL_ENABLED=false

# iMessage (macOS only)
IMESSAGE_ENABLED=false

# ============================================
# EXTENSION CONFIGURATION
# ============================================

# Matrix
MATRIX_ENABLED=false
MATRIX_HOMESERVER=
MATRIX_ACCESS_TOKEN=

# Mattermost
MATTERMOST_ENABLED=false
MATTERMOST_URL=
MATTERMOST_TOKEN=

# IRC
IRC_ENABLED=false

# ============================================
# DATABASE CONFIGURATION (Optional)
# ============================================

VECTORDB_PASSWORD=openclaw

# ============================================
# VOLUME PATHS (for bind mounts)
# ============================================

# Uncomment to use local directories instead of named volumes
# OPENCLAW_CONFIG_DIR=./config
# OPENCLAW_WORKSPACE_DIR=./workspace

# ============================================
# BUILD CONFIGURATION
# ============================================

# Additional APT packages to install in container
OPENCLAW_DOCKER_APT_PACKAGES=

# Docker image name
OPENCLAW_IMAGE=openclaw:full
